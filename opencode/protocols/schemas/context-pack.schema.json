{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ContextPack",
  "type": "object",
  "required": [
    "repo_summary",
    "decisions",
    "outcomes"
  ],
  "properties": {
    "protocol_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "repo_summary": {
      "type": "string",
      "minLength": 1
    },
    "decisions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "outcomes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "open_questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "risks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
