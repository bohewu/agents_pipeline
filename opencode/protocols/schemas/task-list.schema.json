{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TaskList",
  "type": "object",
  "required": [
    "tasks"
  ],
  "properties": {
    "protocol_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "summary",
          "description",
          "primary_output",
          "owner_hint",
          "risk",
          "complexity",
          "definition_of_done",
          "dependencies"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "summary": {
            "type": "string",
            "minLength": 1
          },
          "description": {
            "type": "string"
          },
          "primary_output": {
            "type": "string",
            "minLength": 1
          },
          "owner_hint": {
            "type": "string",
            "enum": [
              "executor-gemini",
              "executor-gpt",
              "peon",
              "generalist",
              "doc-writer"
            ]
          },
          "risk": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          },
          "complexity": {
            "type": "string",
            "enum": [
              "S",
              "M",
              "L"
            ]
          },
          "definition_of_done": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
