{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TestReport",
  "type": "object",
  "required": [
    "related_tasks",
    "status",
    "commands_executed",
    "evidence",
    "failures",
    "notes",
    "recommended_followups"
  ],
  "properties": {
    "protocol_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "related_tasks": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "status": {
      "type": "string",
      "enum": [
        "pass",
        "fail",
        "partial"
      ]
    },
    "commands_executed": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "failures": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "notes": {
      "type": "string"
    },
    "recommended_followups": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "additionalProperties": false
}
